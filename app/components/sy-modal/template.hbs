<EmberWormhole @to="sy-modals">
  {{#sy-modal/overlay visible=visible on-close=(action 'close')}}
    <div class="modal-dialog {{if size (concat 'modal-dialog--' size)}}">
      {{yield (hash
        header = (component 'sy-modal/header' close=(action 'close'))
        body   = (component 'sy-modal/body'   close=(action 'close'))
        footer = (component 'sy-modal/footer' close=(action 'close'))
        close  = (action 'close')
      )}}
    </div>
  {{/sy-modal/overlay}}
</EmberWormhole>
