<BasicDropdown @horizontalPosition="auto-right" as |dd|>
  <dd.Trigger tabindex={{-1}}>
    <input
      type="text"
      class="form-control"
      pattern="\d{1,2}\.\d{1,2}\.\d{2,4}"
      name={{name}}
      value={{displayValue}}
      placeholder={{placeholder}}
      {{on "focus" (fn this.handleFocus dd)}}
      {{on "blur" (fn this.handleBlur dd)}}
      {{on "change" this.handleChange}}
      {{on "input" this.checkValidity}}
      autocomplete="off"
    >
  </dd.Trigger>

  <dd.Content>
    render dd content
    <SyCalendar
      class="sy-datepicker"
      @center={{center}}
      @selected={{value}}
      @onCenterChange={{action (mut center) value="moment"}}
      @onSelect={{action (queue (action on-change) (action 'checkValidity')) value='moment'}}
    />
  </dd.Content>
</BasicDropdown>
