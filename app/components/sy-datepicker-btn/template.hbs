<BasicDropdown @horizontalPosition="auto-right" as |dd|>
  <dd.Trigger @tagName="button" class="btn btn-default">
    {{fa-icon 'calendar'}}
  </dd.Trigger>

  <dd.Content>
    <SyCalender
      class="sy-datepicker"
      @center={{center}}
      @selected={{value}}
      @onCenterChange={{action (mut center) value='moment'}}
      @onSelect={{action on-change value='moment'}}
    />
  </dd.Content>
</BasicDropdown>
